{
  "name": "@a24z/industry-theme",
  "version": "0.1.0",
  "description": "Theme components and styles for industry-themed markdown",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:esm && npm run build:cjs && npm run build:types && npm run build:copy-package-files",
    "build:clean": "rm -rf dist",
    "build:esm": "bun build ./src/index.ts --outfile ./dist/esm/index.js --format esm --external react --external react-dom",
    "build:cjs": "bun build ./src/index.ts --outfile ./dist/cjs/index.js --format cjs --external react --external react-dom",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --outDir ./dist/esm",
    "build:copy-package-files": "echo '{\"type\":\"module\"}' > dist/esm/package.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json && cp -r dist/esm/*.d.ts dist/esm/*.d.ts.map dist/esm/types dist/esm/utils dist/cjs/ 2>/dev/null || true",
    "dev": "npm run build --watch",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "markdown",
    "theme",
    "industry"
  ],
  "author": "a24z Team",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.4",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a24z-ai/themed-markdown.git",
    "directory": "packages/industry-theme"
  }
}